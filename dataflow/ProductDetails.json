{
	"name": "ProductDetails",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "DS_ADLS_CSV_GENERIC",
						"type": "DatasetReference"
					},
					"name": "sourceProduct"
				},
				{
					"dataset": {
						"referenceName": "DS_ADLS_CSV_GENERIC",
						"type": "DatasetReference"
					},
					"name": "sourceProductCategory"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "DS_ADLS_CSV_GENERIC",
						"type": "DatasetReference"
					},
					"name": "sinkRoadFrames"
				},
				{
					"dataset": {
						"referenceName": "DS_ADLS_CSV_GENERIC",
						"type": "DatasetReference"
					},
					"name": "sinkWindow"
				},
				{
					"dataset": {
						"referenceName": "DS_ADLS_CSV_GENERIC",
						"type": "DatasetReference"
					},
					"name": "sinkAgg"
				}
			],
			"transformations": [
				{
					"name": "joinProductAndCategory"
				},
				{
					"name": "select1"
				},
				{
					"name": "derivedColumn1"
				},
				{
					"name": "split1"
				},
				{
					"name": "aggregate1"
				},
				{
					"name": "window1"
				},
				{
					"name": "filter1"
				}
			],
			"scriptLines": [
				"parameters{",
				"     RoadFramesOutputFile as string,",
				"     WindowOutput as string,",
				"     AggOutput as string",
				"}",
				"source(output(",
				"          ProductID as short,",
				"          Name as string,",
				"          ProductNumber as string,",
				"          Color as string,",
				"          StandardCost as double,",
				"          ListPrice as double,",
				"          Size as string,",
				"          Weight as double,",
				"          ProductCategoryID as short,",
				"          ProductModelID as short,",
				"          SellStartDate as string,",
				"          SellEndDate as string,",
				"          DiscontinuedDate as string,",
				"          ThumbNailPhoto as string,",
				"          ThumbnailPhotoFileName as string,",
				"          rowguid as string,",
				"          ModifiedDate as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> sourceProduct",
				"source(output(",
				"          ProductCategoryID as short,",
				"          ParentProductCategoryID as short,",
				"          Name as string,",
				"          rowguid as string,",
				"          ModifiedDate as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> sourceProductCategory",
				"sourceProduct, sourceProductCategory join(sourceProduct@ProductCategoryID == sourceProductCategory@ProductCategoryID,",
				"     joinType:'inner',",
				"     matchType:'exact',",
				"     ignoreSpaces: false,",
				"     broadcast: 'auto')~> joinProductAndCategory",
				"joinProductAndCategory select(mapColumn(",
				"          ProductID,",
				"          ProductName = sourceProduct@Name,",
				"          ProductCategoryName = sourceProductCategory@Name,",
				"          ProductNumber,",
				"          Color,",
				"          StandardCost,",
				"          ListPrice",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> select1",
				"select1 derive(NewProductName = concat(ProductCategoryName,':',ProductName) ) ~> derivedColumn1",
				"derivedColumn1 split(ProductCategoryName=='Road Frames',",
				"     disjoint: false) ~> split1@(RoadFrames, Other)",
				"split1@Other aggregate(groupBy(ProductCategoryName),",
				"     CountProduct = count()) ~> aggregate1",
				"split1@Other window(over(ProductCategoryName),",
				"     asc(ProductName, true),",
				"     Rnk = rowNumber()) ~> window1",
				"window1 filter(Rnk==1) ~> filter1",
				"split1@RoadFrames sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     partitionFileNames:[($RoadFramesOutputFile)],",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     partitionBy('hash', 1)) ~> sinkRoadFrames",
				"filter1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     partitionFileNames:[($WindowOutput)],",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     mapColumn(",
				"          ProductID,",
				"          ProductName,",
				"          ProductCategoryName,",
				"          ProductNumber,",
				"          Color,",
				"          StandardCost,",
				"          ListPrice,",
				"          NewProductName",
				"     ),",
				"     partitionBy('hash', 1)) ~> sinkWindow",
				"aggregate1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     partitionFileNames:[($AggOutput)],",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     partitionBy('hash', 1)) ~> sinkAgg"
			]
		}
	}
}